<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Mainpage">


    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label>Username:</Label>
            <Entry Placeholder="Enter username" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label>Password:</Label>
            <Entry Placeholder="Enter password" />
        </StackLayout>
   


    <Entry x:Name="nameEntry" Placeholder="Name" />
    <Entry x:Name="phoneEntry" Placeholder="Phone" />
    <Entry x:Name="departmentEntry" Placeholder="Department" />
    <Entry x:Name="streetEntry" Placeholder="Street Address" />
    <Entry x:Name="cityEntry" Placeholder="City" />
    <Entry x:Name="stateEntry" Placeholder="State" />
    <Entry x:Name="zipEntry" Placeholder="Zip Code" />
    <Entry x:Name="countryEntry" Placeholder="Country" />

    <Button Text="Add Staff" Clicked="AddStaff_Clicked" />
    <Button Text="Update Staff" Clicked="UpdateStaff_Clicked" />
    <Button Text="Delete Staff" Clicked="DeleteStaff_Clicked" />
    </StackLayout>
    
</ContentPage> 

    


                        
                        